<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">




    <!--    Header-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:orientation="vertical">



        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <!--               text all-->



                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_50sdp"
                    app:cardElevation="@dimen/_2sdp"
                    app:cardUseCompatPadding="true"
                    app:cardCornerRadius="@dimen/_25sdp"
                    app:cardBackgroundColor="#D0C9DD">

                    <TextView
                        android:id="@+id/txtAll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="All"
                        android:layout_gravity="center"
                        android:textSize="@dimen/_15sdp"/>

                </androidx.cardview.widget.CardView>

                <!--               text work-->

                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_50sdp"
                    app:cardElevation="@dimen/_2sdp"
                    app:cardUseCompatPadding="true"
                    app:cardCornerRadius="@dimen/_25sdp"
                    app:cardBackgroundColor="#D0C9DD">

                    <TextView
                        android:id="@+id/txtWork"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="Work"
                        android:layout_gravity="center"
                        android:textSize="@dimen/_15sdp"/>

                </androidx.cardview.widget.CardView>

                <!--               text personal -->

                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/_105sdp"
                    android:layout_height="@dimen/_50sdp"
                    app:cardElevation="@dimen/_2sdp"
                    app:cardUseCompatPadding="true"
                    app:cardCornerRadius="@dimen/_25sdp"
                    app:cardBackgroundColor="#D0C9DD">

                    <TextView
                        android:id="@+id/txtPersonal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="Personal"
                        android:layout_gravity="center"
                        android:textSize="@dimen/_15sdp"/>

                </androidx.cardview.widget.CardView>

                <!--               text wishlist-->

                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/_105sdp"
                    android:layout_height="@dimen/_50sdp"
                    app:cardBackgroundColor="#D0C9DD"
                    app:cardCornerRadius="@dimen/_25sdp"
                    app:cardElevation="@dimen/_2sdp"
                    app:cardUseCompatPadding="true">

                    <TextView
                        android:id="@+id/txtWishlist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Wishlist"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15sdp" />

                </androidx.cardview.widget.CardView>

                <!--               text Birthday-->

                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/_105sdp"
                    android:layout_height="@dimen/_50sdp"
                    app:cardBackgroundColor="#D0C9DD"
                    app:cardCornerRadius="@dimen/_25sdp"
                    app:cardElevation="@dimen/_2sdp"
                    app:cardUseCompatPadding="true">

                    <TextView
                        android:id="@+id/txtBirthday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Birthday"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15sdp" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>


        </HorizontalScrollView>

    </LinearLayout>




    <!--    center-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <FrameLayout
                android:id="@+id/fram"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>



            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnnext"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="@dimen/_15sdp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:backgroundTint="#776693"
                android:src="@drawable/baseline_add_24"
                tools:ignore="SpeakableTextPresentCheck" />


        </RelativeLayout>


    </LinearLayout>

    <!--    putter-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_55sdp"
        android:orientation="vertical">


        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/BottomNav"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:itemRippleColor="@color/design_default_color_on_primary"
            android:elevation="@dimen/_20sdp"
            android:clickable="true"
            android:pointerIcon="cell"
            app:menu="@menu/bottom_menu"/>

    </RelativeLayout>




</LinearLayout>